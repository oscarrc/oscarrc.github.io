---
interface Props {
  name: keyof typeof icons;
  class?: string;
}

const { name, class: className = "" } = Astro.props;

const icons = {
  search: "&#xf422;",
  help: "&#xf0625;",
  menu: "&#xf054f;",
  github: "&#xf09b;",
  linkedin: "&#xf0e1;",
  instagram: "&#xf16d;",
  kofi: "&#xf0f4;",
  chevronRight: "&#xf013e;",
  chevronLeft: "&#xf013d;",
  calendar: "&#xf00ed;",
  external: "&#xf08e;",
  user: "&#xf007;",
  book: "&#xf02d;",
  clock: "&#xf017;",
};

const icon = icons[name];
---

<span class={className} set:html={icon} />
