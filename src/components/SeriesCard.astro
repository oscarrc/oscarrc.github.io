---
import { slug } from "github-slugger";
import Icon from "./Icon.astro";

interface Props {
  seriesName: string;
  postsCount: number;
}

const { seriesName, postsCount } = Astro.props;

const seriesSlug = slug(seriesName);
const seriesLink = `/series/${seriesSlug}`;
---

<article class="w-full flex flex-row justify-between items-center gap-4">
  <div class="flex flex-col gap-2 flex-1">
    <h3 class="text-xl font-semibold">
      ## {seriesName}
    </h3>
    <span class="text-accent">{postsCount} posts</span>
  </div>
  <a class="btn btn-outline btn-sm" href={seriesLink}>
    View Series
    <Icon name="chevronRight" />
  </a>
</article>
