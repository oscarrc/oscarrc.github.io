---
import { ClientRouter } from "astro:transitions";
import Footer from "@/components/Footer.astro";
import Navbar from "@/components/Navbar.astro";
import siteConfig from "@/site.config";

import "@/styles/global.css";
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import ShortcutsDialog from "@/components/ShortcutsDialog.astro";

interface Props {
  title?: string;
  description?: string;
  breadcrumbs?: boolean;
}

const {
  title = siteConfig.title,
  description = siteConfig.description,
  breadcrumbs = true,
} = Astro.props;

const name = siteConfig.name;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>{name} | {title}</title>
    <meta name="description" content={description} />
    <ClientRouter />
  </head>
  <body>
    <div class="min-h-screen flex flex-col gap-8">
      <header class="container max-w-4xl mx-auto p-4 space-y-8">
        <Navbar />
        {breadcrumbs ? <Breadcrumbs /> : null}
      </header>

      <div
        class="grid 2xl:grid-cols-[1fr_minmax(0,_min(56rem,_100%))_1fr] flex-1 2xl:gap-8"
      >
        <div>
          <slot name="left" />
        </div>

        <div
          class="container max-w-4xl min-w-0 mx-auto w-full flex flex-col gap-8 p-4 flex-1"
        >
          <main class="flex flex-col flex-1 gap-16">
            <slot />
          </main>
        </div>

        <div class="py-8 2xl:py-0 2xl:px-8 px-0">
          <slot name="right" />
        </div>
      </div>

      <footer class="container max-w-4xl mx-auto p-4">
        <Footer />
      </footer>
    </div>
    <ShortcutsDialog />
  </body>
</html>

<script>
  document.addEventListener("keydown", (event) => {
    if (event.ctrlKey && event.key === "h") {
      event.preventDefault();
      const modal = document.getElementById(
        "shortcuts"
      ) as HTMLDialogElement | null;
      modal?.showModal();
    }
  });
</script>
